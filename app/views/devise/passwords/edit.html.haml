%h3.page-title
  Change your password

= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :password, hint:"Enter new password"
    = f.input :password_confirmation, hint:"Confirm new password"
  = f.hidden_field :reset_password_token
  = f.actions do
    = f.action :submit, :as => :button, :label => 'Change my password', :button_html => {:class => "btn btn-primary"}

= render :partial => "devise/shared/links"
