.row
  .four.columns
    = form_for(@business, :html => {:class => 'nice'}) do |f|
      .panel{:style => 'padding-bottom: 20px'}
        - if @business.errors.any?
          #error_explanation
            %h2
              = pluralize(@business.errors.count, "error")
              prohibited this business from being saved:
              %ul
                - @business.errors.full_messages.each do |msg|
                  %li= msg
        = f.label :name, "Business Name"
        = f.text_field :name, :class => 'input-text has-tip tip-left', :title => "Enter your business's name."
        = f.label :contact
        = f.text_field :contact, :class => 'input-text has-tip tip-left', :title => "Primary company contact."
        = f.label :phone
        = f.text_field :phone, :class => 'input-text has-tip tip-left', :title => "Primary business phone."
        = f.label :alternate_phone
        = f.text_field :alternate_phone, :class => 'input-text has-tip tip-left', :title => "Alternate phone."
        = f.label :fax
        = f.text_field :fax, :class => 'input-text has-tip tip-left', :title => "Fax"
        = f.label :address
        = f.text_field :address, :class => 'input-text has-tip tip-left', :title => "Company physical address."
        = f.label :address2
        = f.text_field :address2, :class => 'input-text has-tip tip-left', :title => "Additional address"
        = f.label :city
        = f.text_field :city, :class => 'input-text has-tip tip-left', :title => "City"
        = f.label :state
        = f.text_field :state, :class => 'input-text has-tip tip-left', :title => "State"
        = f.label :zip
        = f.text_field :zip, :class => 'input-text has-tip tip-left', :title => "Zip code"
        = f.label :website
        = f.text_field :website, :class => 'input-text has-tip tip-left', :title => "Company website."
        = f.label :email
        = f.text_field :email, :class => 'input-text has-tip tip-left', :title => "Primary email."
        = f.submit "Submit", :class => "nice small radius blue button"
  .eight.columns
    .panel.hide-on-phones{:style => 'padding-bottom: 20px'}
      %h3 Add Business Details
      %p I'd like for this to be a guide for business owners.
      %p I'm sure someone else will write it.

