.row
  .col-xs-12
    - if @businesses.empty?
      .alert.alert-warning
        No locations were found.
    - else   
      =render 'filter'
      =render 'index_table'
      %br/
      .row
        .col-md-12
          .btn-group
            %button.btn.btn-info.btn-sm.dropdown-toggle{data: {toggle:"dropdown"}} 
              Bulk edit
              %i.icon-angle-down.icon-on-right
            %ul.dropdown-menu
              %li 
                %a{:href => "#"} Suspend Sync
              %li 
                %a{:href => "#"} Delete Location 
              %li.divider
              %li 
                %a{:href => "#"} Broadcast Message
            =link_to "Add location", new_business_path, class: "btn btn-info btn-sm"
