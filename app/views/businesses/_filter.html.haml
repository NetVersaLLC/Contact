.row 
  .col-md-6
    .widget-box 
      .widget-header 
        %h4 Location Filter 
        %span.widget-toolbar 
          %a{:href => "#", data: {action: 'settings'}} 
            %i.icon-cog
          %a{:href => "#", data: {action: "reload"}}
            %i.icon-refresh 
          %a{:href => "#", data: {action: "collapse"}}
            %i.icon-chevron-up
          %a{:href => "#", data: {action: "close"} }  
            %i.icon-remove
      .widget-body
        .widget-main
          =search_form_for @q do |f|
            .form-group
              =f.text_field :address_cont, placeholder: 'Address, phone, etc...'
            .form-group 
              =f.text_field :tags_cont, placeholder: "Tags"
            .form-group
              =f.text_field :city_start, placeholder: "City"
            .form-group
              =f.text_field :state_eq, placeholder: "State"
            .form-group
              =f.text_field :zip_eq, placeholder: "Zip"
            .form-actions 
              %button.btn.btn-primary Filter 
              %button.btn.btn-warning{type: "reset"} Clear 
              %button.btn.btn-success Save Tag
