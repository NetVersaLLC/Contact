.space-12
.profile-user-info.profile-user-info-striped
  .profile-info-row 
    .profile-info-name Location Name
    .profile-info-value
      %span= @business.business_name
  .profile-info-row 
    .profile-info-name Location 
    .profile-info-value 
      %i.icon-map-marker.light-orange.bigger-110
      %span.editable= @business.address
      -if @business.address2.present?
        %span= @business.address2
      %span #{@business.city}, #{@business.state} #{@business.zip}
  .profile-info-row 
    .profile-info-name Phone
    .profile-info-value
      %span.editable= @business.toll_free_phone.present? ? @business.toll_free_phone : @business.local_phone
  .profile-info-row 
    .profile-info-name Email
    .profile-info-value 
      %span.editable= @business.user.nil? ? "Not assigned" : @business.user.email
  .profile-info-row 
    .profile-info-name URL
    .profile-info-value 
      %span.editable= @business.company_website
  .profile-info-row 
    .profile-info-name Store Manager
    .profile-info-value 
      %span.editable #{@business.contact_first_name} #{@business.contact_last_name}
