.row
  .col-xs-12 
    - if @accounts.blank? 
      .alert.alert-block.alert-success
        No accounts were found. 
    - else 
      .widget-box 
        .widget-header 
          %h4 Search 
        .widget-body
          .widget-main
            -#
              =search_form_for @q, class:"form-inline" do |f|
                .input-group
                  =f.text_field :email_cont,  placeholder: "Email"
                  =f.text_field :first_name_start,  placeholder: "First Name"
                  =f.text_field :last_name_start,   placeholder: "Last Name"
                  %span.input-group-btn
                    %button.btn.btn-purple.btn-sm
                      Search
                      %i.icon-search.icon-on-right.bigger-110
      .dataTables_wrapper
        %table.table.table-striped.table-bordered.table-hover
          %thead
            %tr
              %th.center
              %th Email 
              %th Full Name 
              %th.hidden-480 Role 
              %th.hidden-480 Phone Number
              %th.hidden-480 Status 
              %th
          %tbody
            - @accounts.each do |account|
              %tr
                %td
                %td= account.class.name
                %td
                %td
                %td
                %td
                %td
