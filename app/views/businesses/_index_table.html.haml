.dataTables_wrapper
  %table.table.table-striped.table-bordered.table-hover.dataTable
    %thead 
      %tr
        %th.center
          %input(type="checkbox")
        %th Address
        %th Location Name 
        %th Phone Number 
        %th Tags 
        %th Modify 
    %tbody 
      - @businesses.each do |business| 
        %tr
          %td.center
            %input(type="checkbox")
          %td
            =link_to business do 
              =business.address 
              %br/
              ="#{business.city}, #{business.state} #{business.zip}"
          %td= business.name
          %td= business.toll_free_phone.present? ? business.toll_free_phone : business.local_phone
          %td= business.tags 
          %td
            = link_to business, class: "btn btn-xs btn-success" do 
              %i.icon-ok.bigger-120
            = link_to edit_business_path(business), class: "btn btn-xs btn-info" do 
              %i.icon-edit.bigger-120
            = link_to business, method: :delete, confirm: "Are you sure?", class: "btn btn-xs btn-danger" do 
              %i.icon-trash.bigger-120
  .row 
    .col-md-6
      .dataTables_info
        = page_entries_info @businesses
    .col-md-6
      .dataTables_paginate.paging_bootstrap
        = will_paginate @businesses, previous_label: "<", next_label: ">", inner_window: 1, outer_window: 1

