%h3 Sales Dashboard for #{current_user.full_name}

%a{href: "/users/sign_up?package_id=5&callcenter=1"} Sign up screen


.row 
  .col-xs-6
    =form_tag '/scanner/start' do 
      %fieldset 
        %legend Scan
        .form-group
          =text_field_tag :name, "", placeholder: 'Business Name' 
        .form-group
          =telephone_field_tag :phone, "", placeholder: 'Business Phone' 
        .form-group
          =number_field_tag :zip, "", placeholder: 'Zip'
        .form-group
          = select_tag :package_id, options_from_collection_for_select(Package.where(label_id: current_label.id), 'id','name')
        =hidden_field_tag :referrer_code, current_user.referrer_code
        %button{ type: "submit", class: "btn btn-default btn-sm"} Start Scan


    %h3 Recent Sales
    %table.table
      %thead 
        %tr
          %th Business 
          %th Sold on
          %th Inital Fee / Monthly Fee
      %tbody 
        - current_user.businesses.order("id desc").limit(50).each do |b| 
          %tr
            %td=b.business_name 
            %td=b.created_at.to_date
            %td #{number_to_currency(b.subscription.intial_fee/100)} / #{number_to_currency(b.subscription.monthly_fee/100)}
  .col-xs-6 
    =render partial: "leaderboard", locals: { call_center: current_user.manager.call_center }
