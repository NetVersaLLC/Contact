.row-fluid.span12
  .span4
    .logo_div
      %a{:href => "/"}
        = image_tag 'logo.png'
  .span8
    .pull-right
      .sign_div
        - if user_signed_in?
          = link_to 'SIGN OUT', '/users/sign_out'
        - else
          = link_to 'SIGN UP', '/users/sign_up'
        |
        = link_to 'CONTACT US', '/contact_us'
      .clearfix
      %span.nav_menu_r
      %ul.nav_menu
        %li
          = link_to 'HOME', '/'
        %li
          = link_to 'LEARN MORE', '/learn_more'
        %li
          = link_to 'PACKAGES', '/packages'
        %li
          = link_to 'GET STARTED', '/get_started'
        %li.last
          = link_to 'REVIEWS', '/reviews'
      %span.nav_menu_l
