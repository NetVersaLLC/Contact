= form_for(@job) do |f|
  - if @job.errors.any?
    #error_explanation
      %h2
        = pluralize(@job.errors.count, "error")
        prohibited this job from being saved:
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :status
    %br/
    = f.number_field :status
  .field
    = f.label :payload
    %br/
    = f.text_area :payload
  .actions
    = f.submit
