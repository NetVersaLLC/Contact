= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :business_id
    = f.number_field :business_id
  .field
    = f.label :client_checkin
    = f.datetime_select :client_checkin
  .actions
    = f.submit 'Save'
