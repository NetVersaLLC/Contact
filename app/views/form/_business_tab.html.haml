= semantic_form_for @business, :validate => true, :html => { :class => 'business-form.form-horizontal' } do |f|
  = hidden_field_tag 'current_tab', @tab ||= "#tab1"
  - @accounts = [] if @accounts.nil?
  = f.semantic_errors
  - @f = f
  .tabbable
    %ul.nav.nav-tabs
      %li.active
        %a{:href => "#tab1"} Step 1: Business Details
      %li
        %a{:href => "#tab2"} Step 2: Hours and Payment
      %li
        %a{:href => "#tab3"} Step 3: Manage Images
      %li
        %a{:href => "#tab4"} Step 4: Company Description
    .tab-content
      -# this content is also in validate.html.erb until we can dry it out.
      #tab1.tab-pane.active= render :partial => 'form/business_details'
      #tab2.tab-pane= render :partial => 'form/hours_and_payment'
      #tab3.tab-pane= render :partial => 'form/logo'
      #tab4.tab-pane= render :partial => 'form/company_description'
  = render :partial => 'form/submit'
