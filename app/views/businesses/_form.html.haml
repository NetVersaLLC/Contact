= form_for(@business) do |f|
  - if @business.errors.any?
    #error_explanation
      %h2
        = pluralize(@business.errors.count, "error")
        prohibited this business from being saved:
      %ul
        - @business.errors.full_messages.each do |msg|
          %li= msg
  .field
    %label{:for => :name} Business Name
    %br/
    = f.text_field :name
  .field
    = f.label :contact
    %br/
    = f.text_field :contact
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :alternate_phone
    %br/
    = f.text_field :alternate_phone
  .field
    = f.label :fax
    %br/
    = f.text_field :fax
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :address2
    %br/
    = f.text_field :address2
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :zip
    %br/
    = f.text_field :zip
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .actions
    = f.submit
