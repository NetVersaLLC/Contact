%h3.page-title
  Edit #{ resource_name.to_s.humanize }

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email, placeholder:"Your email address"
    %p You only need to enter a "New Password" and confirmation if you intend to change your password.
    = f.input :password, placeholder:"New password", :required => true
    = f.input :password_confirmation, placeholder:"Confirm new password", :required => true
    = f.input :current_password, placeholder:"Current password", :required => true
  = f.actions do
    = f.action :submit, :as => :button, :label => 'Save', :button_html => {:class => "btn btn-primary"}

%h4.section-label
  Cancel my account

%p Unhappy? #{ link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete }

= link_to "Back", :back, :class => 'btn'
