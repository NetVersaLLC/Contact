%h3.page-title
  Forgot your password?

= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email, hint:"Enter your email address"
  = f.actions do
    = f.action :submit, :as => :button, :label => 'Send me reset password instructions', :button_html => {:class => "btn btn-primary"}

= render :partial => "devise/shared/links"
