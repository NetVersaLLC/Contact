.row
  .col-xs-12
    #user-wizard.wizard{ data: {target: '#step-container' }}
      %ul.wizard-steps
        %li.active{data: { target: "#step1"}}
          %span.step 1
          %span.title Register Username
        %li{data: { target: "#step2"}}
          %span.step 2
          %span.title Create User Profile
        %li{data: { target: "#step3"}}
          %span.step 3
          %span.title Assign Role
        %li{data: { target: "#step4"}}
          %span.step 4
          %span.title Choose Locations
    %hr/
    #step-container.step-content
      =form_for @user do |f|
        =render partial: "form_step_1", locals: { f: f }
        =render partial: "form_step_2", locals: { f: f }
        =render partial: "form_step_3", locals: { f: f }
        =render partial: "form_step_4", locals: { f: f }
    %hr/
    .wizard-actions
      %button.btn.btn-prev
        %i.icon-arrow-left
        Prev
      %button.btn.btn-success.btn-next{ data: { last: "Finish "}} 
        Next 
        %i.icon-arrow-right.icon-on-right
:javascript
  jQuery(function($) { 
  /* http://eternicode.github.io/bootstrap-datepicker/ */
  $('.date-picker').datepicker({startView: 2, format: "mm/dd/yyyy", keyboardNavigation: false}); 
  } );

