%table.table.table-striped.show-table
  %tbody
    %tr
      %td Name
      %td= "#{@user.prefix} #{@user.first_name} #{@user.last_name}".presence || "Not provided"
    %tr
      %td Phone 
      %td= @user.mobile_phone.presence || "Not provided"
    %tr
      %td Email 
      %td= @user.email
    %tr
      %td Birthdate
      %td= @user.date_of_birth.present? ? l(@user.date_of_birth, format: :long): "None given"
    %tr
      %td Gender
      %td= @user.gender
    %tr
      %td Role 
      %td= @user.role_is
    %tr
      %td Business
      %td
        - if @user.businesses.any?
          = link_to @user.businesses.first.business_name, business_path( @user.businesses.first) 
        - else 
          Not assigned
    %tr
      %td Subscription
      %td
        - if @user.businesses.any? && @user.businesses.first.subscription.present? 
          - sub = @user.businesses.first.subscription
          =link_to number_to_currency(sub.monthly_fee/100) + " per month", subscription_path(sub)
    - if @user.is_a?(Manager) || user.is_a?(CustomerServiceAgent) 
      %tr 
        %td Cost Center
        %td= @user.cost_center.present? && @user.cost_center.name
    - if @user.is_a?(SalesAgent)
      %tr 
        %td Referrer Code
        %td= @user.referrer_code
    %tr
      %td Operating System
      %td= @user.operating_system
    %tr
      %td Web Browser 
      %td= @user.browser 

= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-info"

