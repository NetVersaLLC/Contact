!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title
      = current_label.name
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script(src="//static.getclicky.com/js")
    %script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
  
    %link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.no-icons.min.css" rel="stylesheet")
    %link{:href => "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css", :rel => "stylesheet"}

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"


    -if signed_in? && current_label.css_is_set?
      = current_label.theme_css_files
    /-else # this is already included in application.css.  Plus, you need to prepend with /assets
    /  %link{:rel => :stylesheet, :href => "bootstrap.min.css" }

    -if signed_in? && current_label.css_is_set?
      = current_label.theme_js_files

    = csrf_meta_tags
    %style{:type => "text/css"}
      = current_label.custom_css
    %link{:rel => "icon", :type => "image/ico", :href => current_label.favicon_url}/
  %body
    - if impersonating_user 
      = render 'impersonate/header' 

    .navbar#navbar
      .navbar-header
        %a.navbar-brand{ href: '#'}
          %small
            %i{class: "icon-leaf"}
              Sync Admin

      %ul.nav.ace-nav.navbar-right
        %li.purple
          %a.dropdown-toggle{:data => {toggle: "dropdown"}, href: "#"}
            %i.icon-bell-alt.icon-animated-bell
            %span.badge.badge-important 8

          %ul.pull-right.dropdown-navbar.navbar-pink.dropdown-menu.dropdown-caret.dropdown-closer
            %li.nav-header
              %i.icon-warning-sign
              Notifications

            %li
              %a{href: "#"}
                .clearfix
                  %span.pull-left
                    %i.btn.btn-mini.no-hover.btn-pink.icon-comment
                    Your listing published
                  %span.pull-right.badge.badge-info +12
            %li
              %a{href: "#"}
                %i.btn.btn-mini.btn-primary.icon-key
                Phone verification needed...
            %li
              %a{href: "#"}
                .clearfix
                  %span.pull-left
                    %i.btn.btn-mini.no-hover.btn-success.icon-shopping-cart
                    Activate your subscription!
            %li
              %a{href: "#"}
                See all notifications
                %i.icon-arrow-right

        %li.light-blue
          %a.dropdown-toggle{:data => {toggle: "dropdown"}, href: "#"}
            %img.nav-user-photo(src="assets/avatars/user.jpg" alt="Jason's Photo")
            %span.user-info
              %small Welcome
              Jason
            %i.icon-caret-down

          %ul.user-menu.pull-right.dropdown-menu.dropdown-yellow.dropdown-caret.dropdown-closer
            %li
              %a{href: "#"}
                %i.icon-cog
                Settings
            %li
              %a{href: "profile.html"}
                %i.icon-user
                My Profile
            %li.divider
            %li
              %a{href: "#"}
                %i.icon-off
                Logout
        -#
          - if user_signed_in?
            %ul.nav 
              %li 
                = link_to edit_user_registration_path do 
                  Welcome 
                  %strong= "#{current_user.email}!"
            %ul.nav.pull-right
              -if session[:impersonator_id] 
                %li=link_to('Sign Out', revert_impersonation_path, :method => :delete)
              -else 
                %li= link_to('Sign Out', destroy_user_session_path, :method => :delete)
          - else 
            %ul.nav.pull-right
              %li= link_to('Sign In', new_user_session_path)

    .ajax-progress

    .container
      .row 
        .span6 
          - if flash[:notice] 
            .alert.alert-info= flash[:notice] 
          - if flash[:error] 
            .alert.alert-error= flash[:error] 
          - if flash[:alert] 
            .alert.alert-error= flash[:alert] 
        .span6 
    - if user_signed_in?
      -# = render 'layouts/business_options'
      = yield :summary #render 'layouts/citation_summary' 

    .content{ :class => user_signed_in? ? 'signed_in' : '' } 
      .container
        = yield 

    %footer 
      %span
        Copyright &copy; 2013 
        %strong NetVersa, LLC.,
        All Rights Reserved.
    :javascript 
      try{ clicky.init(100634376); }catch(e){}
    %noscript
      %p
        %img(alt="Clicky" width="1" height="1" src="//in.getclicky.com/100634376ns.gif")
