%table.table.table-striped
  %tr
    %td Package Name
    %td
      = @subscription.package.name
  %tr
    %td Status
    %td{class: [@subscription.active && 'green', !@subscription.active && 'red']}
      %strong
        = @subscription.active ? "Active" : "Inactive"
  %tr
    %td Monthly Fee
    %td 
      = number_to_currency((@subscription.monthly_fee||0) / 100.0)
  %tr
    %td Started
    %td
      = l(@subscription.created_at.to_date, format: :long)
  %tr
    %td Billing Type
    %td Monthly
  %tr
    %td Owner
    %td= link_to @subscription.business.user.email, user_path(@subscription.business.user)
  %tr
    %td Business
    %td= link_to @subscription.business.business_name, business_path( @subscription.business)
  %tr
    %td Billed To Name
    %td= @subscription.billing_name
    
