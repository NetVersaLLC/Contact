= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'nice' }) do |f|
  = devise_error_messages!
  %fieldset
    %h5 Change your password
    = f.hidden_field :reset_password_token
    = f.label :password, "New password"
    = f.password_field :password, :class => 'input-text'
    = f.label :password_confirmation, "Confirm new password"
    = f.password_field :password_confirmation, :class => 'input-text'
    = f.submit "Change my password", :class => "nice small radius blue button"
    %br

= render "links"
