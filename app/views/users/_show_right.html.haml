      .profile-info-name Name
      .profile-info-value
        %span= "#{@user.first_name} #{@user.last_name}".presence || "Not provided"
    .profile-info-row 
      .profile-info-name Phone
      .profile-info-value
        %span= @user.mobile_phone.presence || "Not provided"
    .profile-info-row 
