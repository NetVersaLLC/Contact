- content_for :summary do 
  = render :partial => 'citation_summary'
.business-summary
  .row
    .span6
      .business-info
        %address
          %strong= @business.corporate_name
          %br
          = @business.address 
          %br
          - unless @business.address2.blank? 
            = @business.address2
            %br
          = "#{@business.city}, #{@business.state} #{@business.zip}" 
          %br
          = @business.local_phone 
          %br 
          %a{:href => "'mailto:#{@business.user.email}"}=@business.user.email
          %br
        = link_to 'Edit This Business', edit_business_path(@business), :class => 'btn btn-info'
      %a.business-button{:href => "/downloads/#{@business.id}"} 
        =image_tag('icon-person.png')
        Download Software

    .span6
      .business-info
        .pending
          %h3 Items Pending Action 
          %h1.counter= @job_count
      %a.business-button{:href => "/report.pdf?business_id=#{@business.id}"}
        =image_tag('icon-report.png')
        View Report

