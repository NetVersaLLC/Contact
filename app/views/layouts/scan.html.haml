!!!
%html{:lang => "en"}
  =render 'layouts/head'
  %body.scan-body
    .container.scan-container
      - if @report && @report.label
        .row
          .col-xs-12
            %a{href: @report.label.website_url}
              = image_tag @report.label.logo.url, class:"scan-logo"
            %h4
              - if @report.label.sales_phone.present?
                Call 
                = @report.label.sales_phone 
              - if @report.label.website_url.present?
                | Visit 
                %a{href: @report.label.website_url}=@report.label.website_name
              - if @report.label.sales_email.present?
                | Email 
                %a{email: @report.label.sales_email}=@report.label.sales_email
      %hr
      = yield 

    :javascript 
      try{ clicky.init(100634376); }catch(e){}
    %noscript
      %p
        %img(alt="Clicky" width="1" height="1" src="//in.getclicky.com/100634376ns.gif")
    - if current_label.footer != nil
      = current_label.footer

