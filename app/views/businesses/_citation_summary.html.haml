- cache ['citation_summary', @business] do 
  .citation-info-row
    .container 
      .row 
        .span9
          .citation-info
            %h1= @business.package_payload_sites.length #Business.citation_list.length
            %span ACTIVE LISTINGS 
          .citation-info
            %h1= @business.accounts_synced.length
            %span SYNCRONIZED
          .citation-info
            %h1= @business.package_payload_sites.length - @business.accounts_synced.length
            %span UNSYNCRONIZED
        .span3
          -if params[:delay] 
            %br
            %br
            %h3
              = Task.get_last_sync(@business)
          -else 
            - if !@business.valid?
              %p(style="margin-top:60px;")= t("business_valid_notice")
            - elsif !@business.is_client_downloaded
              %p(style="margin-top:70px;")= t("client_downloaded_notice")
              = link_to "Download Client", business_download_url(@business, "client"), :class => 'btn btn-warning'
            - else  
              = form_for Task.new do
                %input{:type => :hidden, :value => @business.id, :name => 'business_id'}
                %input{:type => :image, :value => 'Sync Now', :src => '/assets/sync_button.png', :class => 'sync' }
