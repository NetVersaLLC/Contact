%section{:id => 'logo-section'}
  #logo-display
    %h3
      Logo
  #show-logo
    - if Image.find_by_business_form_edit_id(@business_form_edit.id)
      - image = Image.where(:business_form_edit_id => @business_form_edit.id, :is_logo => true)
      #logo_shown= image_tag image.first.medium
  %h3 Additional Images
  #uploader
  #thumbnails
    %ul.thumbnails
      - @business.images.each do |image|
        %li.span4{:id => "thumbnail#{image.id}"}
          = image.id
          .thumbnail
            = link_to image_tag(image.thumb), image.url, :title => image.position
            %h3
              = image.position
            %button.btn.btn-info.remove_thumbnail{'data-image-id' => image.id}
              Remove
  :javascript
    window.business_id = '#{@business.id}';
    window.business_form_edit_id = '#{@business_form_edit.id}'
