.row
  .four.columns
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'nice'} ) do |f|
      .panel
        %h5 Sign in
        = f.label :email
        = f.email_field :email, :class => 'input-text'
        = f.label :password
        = f.password_field :password, :class => 'input-text'
        - if devise_mapping.rememberable?
          %label{:for => :remember_me}
            = f.check_box :remember_me
            Remember Me
        = f.submit "Sign in", :class => "nice small radius blue button"

= render "links"
