%h3.page-title
  Sign up

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email, :placeholder => "Enter your email address"
    = f.input :password, :placeholder => "Enter password"
    = f.input :password_confirmation, :placeholder => "Confirm password"
  = f.actions do
    = f.action :submit, :as => :button, :label => 'Sign Up', :button_html => {:class => "btn btn-primary"}
= render :partial => "devise/shared/links"
