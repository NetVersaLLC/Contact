!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title
      = current_label.name
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %style{:type => "text/css"}
      = current_label.custom_css
    /[if lt IE 9]
      <script src="/assets/html5shiv.js"></script>
    %link{:rel => "icon", :type => "image/ico", :href => current_label.favicon_url}/
  %body
    .ajax-progress
    .container
      .row
        .span10
        .span2.sign_In
          - if user_signed_in?
            = link_to('Sign Out', destroy_user_session_path, :method => :delete)
            = "|"
            = link_to('Edit Profile', edit_user_registration_path ) 
          - else
            = link_to('Login', new_user_session_path)
      .row 
        .span6
          - if flash[:notice] 
            .alert.alert-info= flash[:notice] 
          - if flash[:error] 
            .alert.alert-error= flash[:error] 
        .span6 
      = yield
    %a{:href => "http://clicky.com/100593955", :title => "Real Time Web Analytics"}
      %img{:alt => "Real Time Web Analytics", :border => "0", :src => "//static.getclicky.com/media/links/badge.gif"}/
    %script{:src => "//static.getclicky.com/js", :type => "text/javascript"}
    :javascript
      try{ clicky.init(100593955); }catch(e){}%noscript
    %p
      %img{:alt => "Clicky", :height => "1", :src => "//in.getclicky.com/100593955ns.gif", :width => "1"}/
