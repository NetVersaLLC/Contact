= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'nice' }) do |f|
  = devise_error_messages!
  %fieldset
    %h5 Forgot your password?
    = f.label :email
    = f.email_field :email, :class => 'input-text'
    = f.submit "Send me reset password instructions", :class => "nice small radius blue button"
    %br

= render "links"
