.page-header
  %h1 Users
.row
  .col-xs-12 
    - if @users.blank? 
      .alert.alert-block.alert-success
        No users were found. 
    - else 
      .table-responsive
        %table.table.table-striped.table-bordered.table-hover
          %thead
            %tr
              %th.center
              %th Email 
              %th Full Name 
              %th.hidden-480 Role 
              %th.hidden-480 Phone Number
              %th.hidden-480 Status 
              %th
          %tbody
            - @users.each do |user|
              %tr
                %td
                %td= user.email
                %td ???
                %td= user.role_is
                %td ???
                %td ??? 
                %td 
                  .btn-group
                    = link_to user, class: 'btn btn-xs btn-success', title: 'Show user' do 
                      %i.icon-ok.bigger-120
                    = link_to edit_user_path(user), class: 'btn btn-xs btn-info', title: 'Edit user' do 
                      %i.icon-edit
                    = link_to user, method: :delete, class: 'btn btn-xs btn-danger', confirm: 'Are you sure?', title: 'Delete user' do 
                      %i.icon-trash
    %button.btn.btn-primary Add User
